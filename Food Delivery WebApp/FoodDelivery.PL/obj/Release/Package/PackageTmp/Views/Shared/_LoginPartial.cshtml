@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink("Привіт  " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes:
                 new { title = "Manage", id = "wlcm" })
            </li>
            <li>
                <a id="logout"
                   href="javascript:document.getElementById('logoutForm').submit()">Logout</a>
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right" >
        <li>@Html.ActionLink("Увійти", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}

<style>
    #loginLink{
 background-color:red;
 border:1px solid darkred;
    }
        #loginLink:hover {
            background-color: gold;
            border: 1px solid gold;
            color:red;
        }
</style>

