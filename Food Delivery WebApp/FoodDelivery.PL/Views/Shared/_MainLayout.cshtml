<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - FoodSpace</title>
    @*@Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")*@
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w==" crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <link href="~/Content/prodList.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    @*<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>*@
    @*<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>*@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css" rel="stylesheet" />
</head>
<body id="bdy">
    <div style="position:absolute" class="col-md-pull-2" @*style="background-image: linear-gradient(transparent, yellow, red, transparent)"*@>
        <header>

            @if (FoodDelivery.PL.Controllers.HomeController.IsCart == true)
            {
                <div style="position:absolute">
                    <div id="cartFixed" style="cursor: move" class="">
                        @if (FoodDelivery.PL.Controllers.HomeController.CntAdd != 0)
                        {
                            <div id="cnter">
                                <span style="color: darkred">
                                    @FoodDelivery.PL.Controllers.HomeController.CntAdd
                                </span>
                            </div>
                        }
                        <div style="cursor: move">
                            <a href="~/Home/MainPage?isShopCart=true" style="">
                                <img src="~/Photos/Logo/cart.png" width="60" height="60" />
                            </a>
                        </div>
                    </div>
                </div>
            }
            else { }

            <nav id="nav" class="navbar fixed-top navbar-expand-lg navbar-light bg-inverse-info"
                 style="background-image: linear-gradient( blue, blue); border: 2px solid blue; border-radius: 0px; padding: 9px ">
                <div class="container-fluid" style="">
                    @Html.ActionLink("Food Delivery", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", id = "hompg" })
                    <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarCollapse" style="text-align:center">
                        <div class="navbar-nav">
                            &nbsp;                        &nbsp;                        &nbsp;                        &nbsp;                        &nbsp;                &nbsp;
                            @Html.ActionLink("Contacts", "MainPage", "Home", new { param = "Contacts" }, new { id = "btn", @class = "nav-item nav-link" })
                            @Html.ActionLink("Delivery", "MainPage", "Home", new { param = "Delivery" }, new { id = "btn", @class = "nav-item nav-link" })
                            @Html.ActionLink("Payments", "MainPage", "Home", new { param = "Payments" }, new { id = "btn", @class = "nav-item nav-link" })
                            @Html.ActionLink("Cart", "MainPage", "Home", new { isShopCart = "true" }, new { id = "btn", @class = "nav-item nav-link" })
                        </div>
                        <div class="navbar-nav ms-auto">
                            @Html.Partial("_LoginPartial")
                        </div>

                    </div>
                </div>
            </nav>
        </header>
    </div>

    <div class="container body-content">
        @RenderBody()
    </div>
    <!-- Footer -->
    <footer class="text-center  text-white"
            style="background-color: black;opacity:1">
        <!-- Grid container -->
        <div class="container p-4 pb-0">
            <!-- Section: Links -->
            <section class="">
                <p class="d-flex justify-content-center align-items-center">
                    <button id="cback" onclick="document.getElementById('id01').style.display='block'"
                            class="btn btn-outline-light btn-rounded">
                        Написати нам
                    </button>
                </p>
            </section>
            <!-- Section: Links -->

            <hr class="mb-4" />

            <!-- Section: CTA -->
            <section class="">
                <p class="d-flex justify-content-center align-items-center">
                    <span class="me-3" style="">Register for free</span>
                    @Html.ActionLink("Sign up!", "Register", "Account", null, new { @class = "btn btn-outline-light btn-rounded" })
                </p>
            </section>
            <!-- Section: CTA -->

            <hr class="mb-4" />

            <!-- Section: Social media -->
            <section class="mb-4 text-center">
                <!-- Facebook -->
                <a class="btn btn-outline-light btn-floating m-1"
                   href="http://www.facebook.com/"
                   target="_blank"
                   role="button">
                    <i class="fab fa-facebook-f"></i>
                </a>

                <!-- Twitter -->
                <a class="btn btn-outline-light btn-floating m-1"
                   href="#!"
                   role="button">
                    <i class="fab fa-twitter"></i>
                </a>

                <!-- Google -->
                <a class="btn btn-outline-light btn-floating m-1"
                   href="mailto:test1@gmail.com" target="_blank"
                   role="button">
                    <i class="fab fa-google"></i>
                </a>

                <!-- Instagram -->
                <a class="btn btn-outline-light btn-floating m-1"
                   href="" target="_blank"
                   role="button">
                    <i class="fab fa-instagram"></i>
                </a>

                <!-- Linkedin -->
                <a class="btn btn-outline-light btn-floating m-1"
                   href="https://wa.me/0634392871" target="_blank"
                   role="button">
                    <i class="fab fa-whatsapp"></i>
                </a>

                <!-- Github -->
                <a class="btn btn-outline-light btn-floating m-1"
                   href="viber://public?id=0634392871" target="_blank"
                   role="button">
                    <i class="fab fa-viber"></i>
                </a>
            </section>
            <!-- Section: Social media -->
        </div>
        <!-- Grid container -->
        <!-- Copyright -->
        <div class="text-center p-3"
             style="background-color: rgba(0, 0, 0, 0.2)">
            @*© 2020 Copyright:*@
            <a style="text-decoration:none" class="text-white" href="#">
                &copy; @DateTime.Now.Year - Food Space / foodspace.com.ua. Best Buy Online
                <!--ViewBag.FooterText-->
            </a>
        </div>
        <!-- Copyright -->
    </footer>


    @Scripts.Render("~/bundles/jquery")
    @*@Scripts.Render("~/bundles/bootstrap")*@
    @RenderSection("scripts", required: false)
</body>
</html>


<style>
    #bdy {
    }

    #btn {
        font-size: large;
        margin-right: 10px;
        border: 0.1px solid transparent;
        border-radius: 9px;
        font-family: Palatino Linotype;
        font-weight: bold;
        color: white;
    }

        #btn:hover {
            color: yellow;
        }

        #btn:active {
            color: gold;
        }

    #hompg {
        margin-left: 60px;
        border-radius: 9px;
        color: white;
        padding: 9px;
        background-color: #8e44ad;
        border: 0.1px solid #8e44ad;
        background-image: linear-gradient(violet, blue);
        font-weight: bold;
        font-family: Palatino Linotype;
        font-size: x-large;
    }

        #hompg:hover {
            border-radius: 9px;
            color: white;
            padding: 9px;
            background-color: #8e44ad;
            border: 0.1px solid #8e44ad;
            background-image: linear-gradient(violet, lightblue);
        }

        #hompg:active {
            border-radius: 9px;
            border: 0.1px solid gold;
            background-color: gold;
            color: black;
        }

    /*        Cart:*/
    #cnter {
        padding: 3px;
        position: absolute;
        float: left;
        font-weight: bold;
        border: thin solid yellow;
        background-color: yellow;
        border-radius: 55px;
    }

    #cartFixed {
        position: fixed;
        z-index: 100;
        border: 0.4px solid white;
        border-radius: 55px;
        background-color: white;
        padding: 15px;
        margin: 80px 0 0 0;
    }

        #cartFixed:hover {
            background-image: linear-gradient(transparent, yellow, black, yellow);
            border: 0.4px solid yellow;
        }
</style>